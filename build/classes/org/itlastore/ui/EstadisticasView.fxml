<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="main" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.itlastore.ui.EstadisticasViewController">
   <children>
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#volverHomeScreen" prefWidth="100.0" text="Volver">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox>
         <children>
            <Label rotate="-0.0" styleClass="white-label" text="Estadisticas" textFill="#e6f8ff">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </Label>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <effect>
            <Glow level="0.66" />
         </effect>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <ComboBox fx:id="box" prefWidth="150.0" promptText="Elija una ruta" />
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <PieChart fx:id="grafico" styleClass="titleLabel" title="Venta de Tickets" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Total Boletos Vendidos" textFill="#fbfeff" />
            <TextField fx:id="totalVendidoField" editable="false" />
            <Label text="Total Dinero Facturado" textFill="#fbfeff" />
            <TextField fx:id="totalFacturadoField" editable="false" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets top="5.0" />
   </padding>
</VBox>
