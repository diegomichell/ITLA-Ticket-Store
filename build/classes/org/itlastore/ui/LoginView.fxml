<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.itlastore.ui.LoginViewController">
    
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>
   <children>
    
       <Label style="-fx-font-weight: bold;" styleClass="white-label" text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="1">
         <font>
            <Font name="SansSerif Regular" size="16.0" />
         </font></Label>
    
       <TextField fx:id="nombreUsuarioField" promptText="Escriba su usuario" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    
       <Label style="-fx-font-weight: bold;" styleClass="white-label" text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="2">
         <font>
            <Font name="SansSerif Regular" size="16.0" />
         </font></Label>
    
       <PasswordField fx:id="passField" promptText="Escriba su contraseña" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
       <HBox alignment="BOTTOM_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
      <children>
              <Button onAction="#login" text="Iniciar Sesión" />
      </children>
       </HBox>
      <ImageView fitHeight="29.0" fitWidth="200.0">
         <image>
            <Image url="@resources/itlaStore.png" />
         </image>
      </ImageView>
   
       <Text fx:id="message" fill="#ad1f1d" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
